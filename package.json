{
  "name": "vscolors",
  "displayName": "VSColors",
  "description": "Color Format Converter for VSCode. Supports HEX(A), RGB(A) and HSL(A) formats.",
  "version": "0.0.6",
  "engines": {
    "vscode": "^1.52.0"
  },
  "publisher": "kevscript",
  "author": {
    "name": "Kevin Ostafinski"
  },
  "homepage": "https://github.com/kevscript/vscolors",
  "repository": {
    "type": "git",
    "url": "https://github.com/kevscript/vscolors"
  },
  "icon": "icon.png",
  "keywords": [
    "vscolors",
    "color converter",
    "convert colors",
    "hex to rgb",
    "rgb to hex",
    "hex converter",
    "rgb converter",
    "hsl converter",
    "color parser",
    "color format",
    "color type"
  ],
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscolors.color2Hex",
        "title": "Color to HEX"
      },
      {
        "command": "vscolors.color2Rgb",
        "title": "Color to RGB"
      },
      {
        "command": "vscolors.color2Rgba",
        "title": "Color to RGBA"
      },
      {
        "command": "vscolors.color2Hsl",
        "title": "Color to HSL"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus",
          "command": "vscolors.color2Hex",
          "group": "1_modification"
        },
        {
          "when": "editorTextFocus",
          "command": "vscolors.color2Rgb",
          "group": "1_modification"
        },
        {
          "when": "editorTextFocus",
          "command": "vscolors.color2Rgba",
          "group": "1_modification"
        },
        {
          "when": "editorTextFocus",
          "command": "vscolors.color2Hsl",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/chai": "^4.3.16",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.11",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "chai": "*",
    "eslint": "^9.7.0",
    "glob": "^11.0.0",
    "mocha": "*",
    "typescript": "^5.5.3",
    "vscode-test": "^1.4.1"
  },
  "dependencies": {
    "@typescript-eslint/typescript-estree": "^7.16.1"
  }
}
